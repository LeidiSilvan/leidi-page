---
import { Code2, Palette, Database, Globe, Wrench, Lightbulb } from 'lucide-astro';

// Datos estáticos de skills
const skillCategories = [
  {
    title: "Frontend",
    icon: Code2,
    skills: [
      { name: "React", level: 90 },
      { name: "Vue.js", level: 85 },
      { name: "TypeScript", level: 88 },
      { name: "Next.js", level: 82 },
      { name: "Astro", level: 75 }
    ]
  },
  {
    title: "Diseño",
    icon: Palette,
    skills: [
      { name: "CSS/Sass", level: 92 },
      { name: "Tailwind CSS", level: 88 },
      { name: "Figma", level: 80 },
      { name: "Adobe XD", level: 75 },
      { name: "UI/UX", level: 85 }
    ]
  },
  {
    title: "Backend",
    icon: Database,
    skills: [
      { name: "Node.js", level: 78 },
      { name: "PostgreSQL", level: 82 },
      { name: "MongoDB", level: 75 },
      { name: "Firebase", level: 85 },
      { name: "API REST", level: 88 }
    ]
  },
  {
    title: "Herramientas",
    icon: Wrench,
    skills: [
      { name: "Git", level: 90 },
      { name: "Docker", level: 70 },
      { name: "Vite", level: 85 },
      { name: "Webpack", level: 75 },
      { name: "Jest", level: 80 }
    ]
  }
];
---

<section id="skills" class="skills-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Habilidades</h2>
      <p class="section-subtitle">
        Tecnologías y herramientas que domino para crear experiencias web excepcionales
      </p>
    </div>
    
    <div class="skills-grid">
      {skillCategories.map((category) => (
        <div class="skill-category">
          <div class="category-header">
            <div class="category-icon">
              <category.icon size={24} />
            </div>
            <h3 class="category-title">{category.title}</h3>
          </div>
          
          <div class="skills-list">
            {category.skills.map((skill) => (
              <div class="skill-item">
                <div class="skill-info">
                  <span class="skill-name">{skill.name}</span>
                  <span class="skill-percentage">{skill.level}%</span>
                </div>
                <div class="skill-bar">
                  <div class="skill-progress" style={`width: ${skill.level}%`}></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Sección adicional de soft skills -->
    <div class="soft-skills">
      <div class="soft-skills-header">
        <Lightbulb size={24} />
        <h3>Soft Skills</h3>
      </div>
      <div class="soft-skills-grid">
        <div class="soft-skill">Trabajo en equipo</div>
        <div class="soft-skill">Comunicación efectiva</div>
        <div class="soft-skill">Resolución de problemas</div>
        <div class="soft-skill">Adaptabilidad</div>
        <div class="soft-skill">Aprendizaje continuo</div>
        <div class="soft-skill">Liderazgo</div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-section {
    padding: var(--space-3xl) 0;
    background-color: var(--color-bg-secondary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
  }
  
  .skill-category {
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-xl);
    padding: var(--space-xl);
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .skill-category:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .category-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }
  
  .category-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .category-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }
  
  .skills-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .skill-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  
  .skill-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .skill-name {
    font-weight: 600;
    color: var(--color-text-primary);
  }
  
  .skill-percentage {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }
  
  .skill-bar {
    height: 8px;
    background-color: var(--color-bg-tertiary);
    border-radius: var(--border-radius-sm);
    overflow: hidden;
  }
  
  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    border-radius: var(--border-radius-sm);
    transition: width 1s ease-out;
    position: relative;
  }
  
  .skill-progress::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 20%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3));
    animation: shimmer 2s infinite;
  }
  
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  
  /* Soft Skills */
  .soft-skills {
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-xl);
    padding: var(--space-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .soft-skills-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
    color: var(--color-primary);
  }
  
  .soft-skills-header h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }
  
  .soft-skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-sm);
  }
  
  .soft-skill {
    padding: var(--space-md);
    background: var(--color-bg-primary);
    border-radius: var(--border-radius-md);
    text-align: center;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .soft-skill:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .soft-skills-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
  
  /* Tema oscuro */
  @media (prefers-color-scheme: dark) {
    .skill-category,
    .soft-skills {
      border-color: rgba(255, 255, 255, 0.1);
    }
    
    .soft-skill {
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
