---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Leidi - Portfolio | Desarrolladora Frontend" description="Portfolio personal de Leidi - Desarrolladora Frontend especializada en crear experiencias web increíbles">
  <Header />
  <main>
    <Hero />
    
    <!-- Aquí agregaremos más secciones -->
    <section id="sobre-mi" class="section">
      <div class="container">
        <h2 class="section-title text-center">Sobre mí</h2>
        <p class="text-center">Esta sección se desarrollará próximamente...</p>
      </div>
    </section>
    
    <section id="proyectos" class="section">
      <div class="container">
        <h2 class="section-title text-center">Proyectos</h2>
        <p class="text-center">Esta sección se desarrollará próximamente...</p>
      </div>
    </section>
    
    <section id="skills" class="section">
      <div class="container">
        <h2 class="section-title text-center">Skills</h2>
        <p class="text-center">Esta sección se desarrollará próximamente...</p>
      </div>
    </section>
    
    <section id="contacto" class="section">
      <div class="container">
        <h2 class="section-title text-center">Contacto</h2>
        <p class="text-center">Esta sección se desarrollará próximamente...</p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .section {
    padding: var(--space-3xl) 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }
  
  .section:nth-child(even) {
    background-color: var(--color-bg-secondary);
  }
  
  .section-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-xl);
    color: var(--color-text-primary);
  }
  
  /* Responsive sections */
  @media (max-width: 768px) {
    .section {
      padding: var(--space-2xl) 0;
      min-height: 50vh;
    }
    
    .section-title {
      font-size: 2rem;
      margin-bottom: var(--space-lg);
    }
  }
</style>
